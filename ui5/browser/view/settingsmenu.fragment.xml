<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
  <ViewSettingsDialog confirm="handleSettingsConfirm">
    <customTabs>
      <ViewSettingsCustomTab id="drawing-options" icon="sap-icon://signature" text="Drawing options" title="Drawing options" tooltip="Drawing options">
        <content>
          <Panel>
            <content>
              <f:Form>
                <f:layout>
                  <f:ResponsiveGridLayout
                          labelSpanS="2"
                          emptySpanS="0"
                          singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                  <f:FormContainer>
                    <f:formElements>
                      <f:FormElement label="TH1">
                        <f:fields>
                          <MultiComboBox
                                id="do-TH1"
                                showButton="false"
                                items="{ path: '/TH1' }">
                          <core:Item text="{name}"/>
                        </MultiComboBox>
                        </f:fields>
                      </f:FormElement>
                      <f:FormElement label="TH2">
                        <f:fields>
                          <MultiComboBox
                                  id="do-TH2"
                                  showButton="false"
                                  items="{ path: '/TH2' }">
                            <core:Item text="{name}"/>
                          </MultiComboBox>
                        </f:fields>
                      </f:FormElement>
                    </f:formElements>
                  </f:FormContainer>
                </f:formContainers>
              </f:Form>
            </content>
          </Panel>
        </content>
      </ViewSettingsCustomTab>
      <ViewSettingsCustomTab icon="sap-icon://add-equipment" >
        <content>
          <Text text="Other setting tab, that you can implement" />
        </content>
      </ViewSettingsCustomTab>
    </customTabs>
  </ViewSettingsDialog>
</core:FragmentDefinition>