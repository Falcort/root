<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
  <P13nDialog ok="onDrawingOptionsPopupOK" cancel="onDrawingOptionsPopupCancel" resizable="false" draggable="false" title="Open with display options" contentHeight="auto" contentWidth="auto">
    <VBox class="sapUiSmallMargin">
      <f:Form id="drawingOptionsForm" editable="true">
        <f:layout>
          <f:ColumnLayout />
        </f:layout>
        <f:formContainers>
          <f:FormContainer>
            <f:formElements>
              <f:FormElement label="Options">
                <f:fields>
                  <MultiComboBox
                          selectionChange="handleSelectionChange"
                          selectionFinish="handleSelectionFinish"
                          width="500px"
                          items="{
                            path: '/drawingOptions',
                            sorter: {
                              path: 'graph',
                              descending: false,
                              group: true
                            }
                          }">
                    <core:Item text="{option}" />
                    <layoutData>
                      <f:ColumnElementData cellsSmall="12" cellsLarge="5" />
                    </layoutData>
                  </MultiComboBox>
                </f:fields>
              </f:FormElement>
              <f:FormElement label="Save option(s) ">
                <f:fields>

                    <Switch type="AcceptReject" state="false">
                      <layoutData>
                        <FlexItemData growFactor="1" />
                      </layoutData>
                    </Switch>
                </f:fields>
              </f:FormElement>
            </f:formElements>
          </f:FormContainer>
        </f:formContainers>
      </f:Form>
    </VBox>
  </P13nDialog>
</core:FragmentDefinition>